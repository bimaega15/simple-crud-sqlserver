<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="MiniTrello.Views.BoardDetailPopup"
               Color="Transparent"
               CanBeDismissedByTappingOutsideOfPopup="True">

    <Frame BackgroundColor="#1A1A2E" CornerRadius="20" Padding="0" HasShadow="True"
           BorderColor="#2A2A3E" WidthRequest="340">
        <VerticalStackLayout Spacing="0">

            <!-- Header with board color -->
            <Frame x:Name="HeaderFrame" BackgroundColor="#6C5CE7" CornerRadius="0"
                   Padding="22,20" HasShadow="False" BorderColor="Transparent">
                <VerticalStackLayout Spacing="8">
                    <Label x:Name="BoardNameLabel" Text="" FontSize="24" FontAttributes="Bold"
                           TextColor="White"/>
                    <Frame x:Name="StatusBadge" CornerRadius="10" Padding="12,4"
                           HasShadow="False" BorderColor="Transparent" BackgroundColor="#FFFFFF22"
                           HorizontalOptions="Start">
                        <Label x:Name="StatusLabel" Text="" FontSize="11" TextColor="White"
                               FontAttributes="Bold"/>
                    </Frame>
                </VerticalStackLayout>
            </Frame>

            <!-- Content -->
            <VerticalStackLayout Spacing="16" Padding="22,18">

                <!-- Description -->
                <VerticalStackLayout Spacing="4">
                    <Label Text="DESCRIPTION" FontSize="10" TextColor="#6B7280"
                           FontAttributes="Bold" CharacterSpacing="1"/>
                    <Label x:Name="DescriptionLabel" Text="-" FontSize="14" TextColor="#E2E8F0"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>

                <BoxView HeightRequest="1" Color="#2A2A3E"/>

                <!-- Info Grid -->
                <Grid ColumnDefinitions="*,*" RowSpacing="12" ColumnSpacing="12">
                    <!-- Created -->
                    <VerticalStackLayout Grid.Column="0" Spacing="3">
                        <Label Text="CREATED" FontSize="10" TextColor="#6B7280"
                               FontAttributes="Bold" CharacterSpacing="1"/>
                        <Label x:Name="CreatedLabel" Text="" FontSize="12" TextColor="#A0AEC0"/>
                    </VerticalStackLayout>
                    <!-- Modified -->
                    <VerticalStackLayout Grid.Column="1" Spacing="3">
                        <Label Text="MODIFIED" FontSize="10" TextColor="#6B7280"
                               FontAttributes="Bold" CharacterSpacing="1"/>
                        <Label x:Name="ModifiedLabel" Text="" FontSize="12" TextColor="#A0AEC0"/>
                    </VerticalStackLayout>
                </Grid>

                <BoxView HeightRequest="1" Color="#2A2A3E"/>

                <!-- Action Buttons -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8" Margin="0,4,0,0">
                    <Button Grid.Column="0" Text="Open"
                            BackgroundColor="#6C5CE7" TextColor="White" CornerRadius="14"
                            FontAttributes="Bold" FontSize="13" HeightRequest="44"
                            Clicked="OnOpenClicked"/>
                    <Button Grid.Column="1" Text="Edit"
                            BackgroundColor="#3A3A5E" TextColor="White" CornerRadius="14"
                            FontAttributes="Bold" FontSize="13" HeightRequest="44"
                            Clicked="OnEditClicked"/>
                    <Button Grid.Column="2" Text="Close"
                            BackgroundColor="#2A2A3E" TextColor="#A0AEC0" CornerRadius="14"
                            FontAttributes="Bold" FontSize="13" HeightRequest="44"
                            Clicked="OnCloseClicked"/>
                </Grid>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>
