<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="MiniTrello.Views.BoardFormPopup"
               Color="Transparent"
               CanBeDismissedByTappingOutsideOfPopup="False">

    <Frame BackgroundColor="#1A1A2E" CornerRadius="20" Padding="24" HasShadow="True"
           BorderColor="#2A2A3E" WidthRequest="330">
        <VerticalStackLayout Spacing="18">
            <!-- Title -->
            <Label x:Name="PopupTitle" Text="New Board" FontSize="22" FontAttributes="Bold"
                   TextColor="White" HorizontalOptions="Center"/>

            <!-- Divider -->
            <BoxView HeightRequest="1" Color="#2A2A3E"/>

            <!-- Board Name -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Board Name" FontSize="11" TextColor="#6B7280" FontAttributes="Bold"/>
                <Frame BackgroundColor="#0F0F1A" CornerRadius="12" Padding="4,0"
                       BorderColor="#2A2A3E" HasShadow="False">
                    <Entry x:Name="NameEntry" Placeholder="Enter board name..."
                           FontSize="15" TextColor="White"
                           PlaceholderColor="#4A5568"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Description -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Description" FontSize="11" TextColor="#6B7280" FontAttributes="Bold"/>
                <Frame BackgroundColor="#0F0F1A" CornerRadius="12" Padding="4,0"
                       BorderColor="#2A2A3E" HasShadow="False">
                    <Editor x:Name="DescriptionEditor" Placeholder="Enter description (optional)..."
                            FontSize="14" TextColor="White" HeightRequest="80"
                            AutoSize="TextChanges"
                            PlaceholderColor="#4A5568"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Status -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Status" FontSize="11" TextColor="#6B7280" FontAttributes="Bold"/>
                <Frame BackgroundColor="#0F0F1A" CornerRadius="12" Padding="4,0"
                       BorderColor="#2A2A3E" HasShadow="False">
                    <Picker x:Name="StatusPicker" TextColor="White" FontSize="15">
                        <Picker.Items>
                            <x:String>Backlog</x:String>
                            <x:String>In Progress</x:String>
                            <x:String>Q.A</x:String>
                            <x:String>Completed</x:String>
                        </Picker.Items>
                    </Picker>
                </Frame>
            </VerticalStackLayout>

            <!-- Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,6,0,0">
                <Button Grid.Column="0" Text="Cancel" BackgroundColor="#2A2A3E"
                        TextColor="#A0AEC0" CornerRadius="14" FontAttributes="Bold"
                        HeightRequest="46" Clicked="OnCancelClicked"/>
                <Button Grid.Column="1" Text="Save" BackgroundColor="#6C5CE7"
                        TextColor="White" CornerRadius="14" FontAttributes="Bold"
                        HeightRequest="46" Clicked="OnSaveClicked"/>
            </Grid>
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>
