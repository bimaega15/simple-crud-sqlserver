<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MiniTrello.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MiniTrello.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="#0F0F1A"
    Shell.ForegroundColor="White"
    Shell.TitleColor="White"
    Shell.TabBarBackgroundColor="#0F0F1A"
    Shell.TabBarForegroundColor="#6C5CE7"
    Shell.TabBarUnselectedColor="#4A5568"
    Title="MiniTrello">

    <ShellContent
        Title="Boards"
        ContentTemplate="{DataTemplate views:BoardListPage}"
        Route="boards" />

</Shell>
